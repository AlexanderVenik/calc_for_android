<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="386dp"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="192dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_span="4"
                android:gravity="bottom|right"
                android:minHeight="20dp"
                android:padding="10dp"
                android:textSize="36sp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_horizontal">>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:fontFamily="@font/inconsolata_bold"
                android:minWidth="80dp"
                android:minHeight="50dp"
                android:textColor="#364CC5"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_span="4"
                android:gravity="bottom|right"
                android:minHeight="20dp"
                android:padding="10dp"
                android:textSize="36sp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">>

            <TextView
                android:id="@+id/textView"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_span="4"
                android:gravity="bottom|right"
                android:maxHeight="80dp"
                android:maxLength="10"
                android:minHeight="80dp"
                android:padding="10dp"
                android:text="0"
                android:textSize="36sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="3dp"
                android:layout_span="1"
                android:marqueeRepeatLimit="marquee_forever"
                android:minWidth="90dp"
                android:minHeight="90dp"
                android:text="C"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnPlusMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="3dp"
                android:layout_span="1"
                android:marqueeRepeatLimit="marquee_forever"
                android:minWidth="90dp"
                android:minHeight="90dp"
                android:text="+/-"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="3dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:minWidth="90dp"
                android:minHeight="90dp"
                android:text="B"
                android:textSize="36sp" />

            <Button
                android:id="@+id/btnDivision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="3dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:minWidth="90dp"
                android:minHeight="90dp"
                android:text="/"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnNumber7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="3dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:minWidth="90dp"
                android:minHeight="90dp"
                android:text="7"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnNumber8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="3dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:minWidth="90dp"
                android:minHeight="90dp"
                android:text="8"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnNumber9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="3dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:minWidth="90dp"
                android:minHeight="90dp"
                android:text="9"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bthMultiplication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="3dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:minWidth="90dp"
                android:minHeight="90dp"
                android:text="*"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnNumber4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="3dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:minWidth="90dp"
                android:minHeight="90dp"
                android:text="4"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnNumber5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="3dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:minWidth="90dp"
                android:minHeight="90dp"
                android:text="5"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnNumber6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="3dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:minWidth="90dp"
                android:minHeight="90dp"
                android:text="6"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="3dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:minWidth="90dp"
                android:minHeight="90dp"
                android:text="+"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnNumber1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="3dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:minWidth="90dp"
                android:minHeight="90dp"
                android:text="1"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnNumber2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="3dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:minWidth="90dp"
                android:minHeight="90dp"
                android:text="2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnNumber3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="3dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:minWidth="90dp"
                android:minHeight="90dp"
                android:text="3"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="3dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:minWidth="90dp"
                android:minHeight="90dp"
                android:text="-"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnComma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="3dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:minWidth="90dp"
                android:minHeight="90dp"
                android:text=","
                android:textSize="36sp" />

            <Button
                android:id="@+id/btnNumber0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="3dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:minWidth="90dp"
                android:minHeight="90dp"
                android:text="0"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="3dp"
                android:layout_span="2"
                android:marqueeRepeatLimit="marquee_forever"
                android:minWidth="90dp"
                android:minHeight="90dp"
                android:text="="
                android:textSize="30sp" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>